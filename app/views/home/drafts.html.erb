<div class="row">
  <div class="col-lg-3">
    <%= render 'shared/user_info' %>
  </div>
  <div id="newsfeed" class="col-lg-6">
    <%= render 'posts/form' %>
    <br>
    <div id="activities">
      <% if @posts.empty? %>
        <div class="well">
          <%= render('shared/no_resource', resources: 'Post') %>
        </div>
      <% else %>
        <%  @posts.each do |post| %>
         <div id="post-<%= @post.id %>" class="post">
            <div class="row">
              <div class="col-lg-12 well">
                <%= render post, remote: false %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3">
    <%= render 'shared/links' %>
  </div>
</div>